<p>
  <b>DEPARTMENT:</b>
</p

<table cellspacing="0">
<% for hardware_assign in hardware_assigns %>
  <tr id="<%= dom_id(hardware_assign) %>">
	<td>
	  <%= hardware_assign.department.name unless hardware_assign.department.nil? %>	
	</td>
	<td>
	  <%= hardware_assign.department.account unless hardware_assign.department.nil? %>	
	</td>
	<td class="added_on">Added on: <%= hardware_assign.created_at %></td>
  </tr>
<% end %>
</table>